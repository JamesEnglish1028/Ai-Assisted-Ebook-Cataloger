# AI Assisted Ebook Cataloger - Environment Variables

# Required: Google Gemini API Key for AI analysis
# Get from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Optional: OpenAI API key (required only if selecting OpenAI provider)
OPENAI_API_KEY=your_openai_api_key_here

# Optional: Anthropic API key (required only if selecting Anthropic provider)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Optional: Server port (default: 3001, Render uses 10000)
PORT=3001

# Optional: Node environment (set automatically by Render)
NODE_ENV=development

# Optional: Enable/disable accessibility analysis (production setting)
ACCESSIBILITY_ENABLED=true

# Optional: LOC authority enrichment (cataloger-mcp)
ENABLE_LOC_AUTHORITY_ENRICHMENT=false
# Mode: mcp | direct (Render defaults to direct when unset)
LOC_AUTHORITY_MODE=direct
LOC_AUTHORITY_MCP_URL=http://localhost:3002/mcp
LOC_AUTHORITY_TIMEOUT_MS=3500
LOC_AUTHORITY_MAX_RESULTS=5
# Optional override for direct LOC API search base
LOC_DIRECT_SEARCH_URL=https://www.loc.gov/search/

# Optional: Open Library enrichment (mcp-open-library)
ENABLE_OPEN_LIBRARY_ENRICHMENT=false
# Modes: shadow | apply
OPEN_LIBRARY_ENRICHMENT_MODE=shadow
OPEN_LIBRARY_MCP_URL=http://localhost:3003/mcp
OPEN_LIBRARY_TIMEOUT_MS=3500
OPEN_LIBRARY_MAX_RESULTS=5

# Optional: local stdio->HTTP bridge for cataloger-mcp
LOC_AUTHORITY_BRIDGE_PORT=3002
LOC_AUTHORITY_BRIDGE_PATH=/mcp
LOC_AUTHORITY_BRIDGE_REQUEST_TIMEOUT_MS=15000
LOC_AUTHORITY_STDIO_COMMAND=cataloger-mcp-server
LOC_AUTHORITY_STDIO_ARGS=

# Optional: local stdio->HTTP bridge for mcp-open-library
OPEN_LIBRARY_BRIDGE_PORT=3003
OPEN_LIBRARY_BRIDGE_PATH=/mcp
OPEN_LIBRARY_BRIDGE_REQUEST_TIMEOUT_MS=15000
OPEN_LIBRARY_STDIO_COMMAND=mcp-open-library
OPEN_LIBRARY_STDIO_ARGS=

# Puppeteer Configuration (Render handles automatically)
PUPPETEER_SKIP_CHROMIUM_DOWNLOAD=false
PUPPETEER_EXECUTABLE_PATH=/usr/bin/chromium-browser
